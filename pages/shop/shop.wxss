page{
  padding-bottom: 90rpx;
}
.user{
  padding: 20rpx;
}
.user_info .userphone{
  text-align: right;
}
.cart_title{
  padding: 20rpx;
  font-size: 36rpx;
  color: #eb4450;
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_wrap{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img image{
  width: 80%;
}
.cart_info_wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_info_wrap .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_price_wrap{
  display: flex;
  justify-content: space-between;
}
.cart_price_wrap .cart_price{
  color: #eb4450;
  font-size: 34rpx;
}
.cart_num_tool{
  display: flex;
}
.num_edit{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.goods_num{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.all_chk_wrap{
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.total_price_wrap{
  flex: 5;
  padding-right: 15rpx;
  text-align: right;
}
.total_price_text{
  color: #eb4450;
  font-size: 32rpx;
}
.order_pay_wrap{
  flex: 3;
  background-color: #eb4450;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}