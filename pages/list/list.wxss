.main{
  padding: 20rpx 10rpx;
  background-color: #eee;
  /* height: 1000rpx; */
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.item{
  width: 340rpx;
  height: 480rpx;
  margin: 10rpx auto; 
  background-color: #fff;
  border-radius: 20rpx;
  position: relative;
}
.item image{
  width: 100%;
}
.item .content{
  margin-top: 60rpx;
  margin-bottom: 20rpx;
} 
.item .row{
  position: absolute;
  left: 10rpx;
  top: 320rpx;
  font-size:27rpx;
}
.item .row1{
  position: absolute;
  left: 3rpx;
  top: 390rpx;
  font-size:27rpx;
}
.item .price{
  color:#da4121;
  font-size:34rpx;
}
.head{
  position: absolute;
  width: 45rpx;
  left: 10rpx;
  top: 430rpx;
}
.item .row2{
  position: absolute;
  left: 56rpx;
  top: 440rpx;
  font-size:26rpx;
}
