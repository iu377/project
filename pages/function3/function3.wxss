.main{
  background-color: #edece8;
}
.main image{
  width: 750rpx;
}
.section{
  margin: 10rpx 20rpx;
  height: 85rpx;
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
  border-radius: 10rpx;
}
.s1{
  margin-left: 10rpx;
  font-size: 35rpx;
  line-height: 85rpx;
  color: #5C3317;
}
.s2{
  margin-left: 1rpx;
  font-size: 40rpx;
  color: #000000;
}
.section1{
  margin: 30rpx 20rpx;
  height: 200rpx;
  background-color: #6495ED;
  display: flex;
  justify-content: flex-start;
  border-radius: 100rpx;
}
.image1 image{
  width: 200rpx;
  height: 200rpx;
}
.s3{
  margin-left: 20rpx;
  margin-top: 25rpx;
  font-size: 60rpx;
  font-weight: bold;
}
.image2 image{
  margin-top: 45rpx;
  width: 100rpx;
  height: 100rpx;
}
.title{
  padding:10rpx 40rpx 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
}
.t1{
   height: 50rpx;
   line-height: 50rpx;
   font-size: 38rpx;
   font-weight: bold;
}
.t2{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 33rpx;
  color: #5C3317;
}
.commodity{
  padding: 10rpx 10rpx;
  background-color: #eee;
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.item{
  width: 340rpx;
  height: 400rpx;
  margin: 10rpx auto; 
  background-color: #fff;
  border-radius: 20rpx;
  position: relative;
}
.item image{
  width: 100%;
}
.item .content{
  margin-top: 60rpx;
  margin-bottom: 20rpx;
} 
.item .row{
  position: absolute;
  left: 10rpx;
  top: 320rpx;
  font-size:27rpx;
}
.item .row1{
  position: absolute;
  left: 3rpx;
  top: 350rpx;
  font-size:27rpx;
}
.item .price{
  color:#da4121;
  font-size:34rpx;
}
